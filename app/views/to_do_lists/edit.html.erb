<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing To-do list</h1>

  <%= render "form", to_do_list: @to_do_list %>
  
  <%= button_to 'Destroy To-do list', to_do_list_path(@to_do_list), method: :delete, class: "mt-3 rounded-lg py-3 px-5 bg-red-300 font-medium" %>
  <%= link_to "Back to To-do lists", to_do_lists_path, class: "mt-3 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  
</div>
